<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">

        <shape>
            <stroke android:width="2dp" android:color="#db8200"/>
            <gradient android:startColor="#fff" android:endColor="#fff" android:angle="0"/>
            <corners android:radius="7dp"/>
        </shape>

    </item>
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="2dp" android:color="#898989"/>
            <gradient android:startColor="#ccc" android:endColor="#ccc" android:angle="0"/>
            <corners android:radius="7dp"/>
        </shape>
    </item>
</selector>