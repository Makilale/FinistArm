<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.corp.a.i.finistarm.SettingsActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:windowSoftInputMode="stateHidden"
        app:layout_constraintVertical_bias="0.0">

        <View
            android:id="@+id/center"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_rectangle"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />
        <TextView
            android:id="@+id/menuFinist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/intro"
            android:text="@string/finist"
            android:textColor="#000"
            android:textSize="24sp"
            tools:targetApi="jelly_bean" />

        <TextView
            android:id="@+id/adm_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/menuFinist"
            android:layout_alignStart="@+id/menuFinist"
            android:layout_below="@+id/menuFinist"
            android:fontFamily="@font/robotolight"
            android:text="@string/panel"
            android:textColor="#000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/add_hall"
            style="@style/BtListStyle"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/view2"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="145dp"
            android:layout_marginTop="40dp"
            android:text="@string/settings_halls_add" />
        <Button
            android:id="@+id/add_account"
            style="@style/BtListStyle"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/view2"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="145dp"
            android:layout_marginTop="40dp"
            android:onClick="onClick_AddAccuant"
            android:text="@string/settings_acounts_add" />
        <Button
            android:id="@+id/settings_back"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/adm_panel"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="500dp"
            android:background="@drawable/main_menu_btn_open_day"
            android:fontFamily="@font/robotoregular"
            android:text="@string/settings_back"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:visibility="visible" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/adm_panel"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_rectangle"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/button_halls"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignStart="@+id/view2"
            android:layout_below="@+id/view"
            android:layout_marginTop="22dp"
            android:background="@drawable/main_menu_button_settings"
            android:fontFamily="@font/robotoregular"
            android:onClick="onClick_Halls"
            android:text="@string/settings_halls"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_accounts"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/button_halls"
            android:layout_alignBottom="@+id/button_halls"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/button_halls"
            android:layout_toRightOf="@+id/button_halls"
            android:background="@drawable/main_menu_button_settings"
            android:fontFamily="@font/robotoregular"
            android:onClick="onClick_Accounts"
            android:text="@string/settings_acounts"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_categories"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/button_stock"
            android:layout_alignBottom="@+id/button_stock"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/button_stock"
            android:layout_toRightOf="@+id/button_stock"
            android:background="@drawable/main_menu_button_settings"
            android:fontFamily="@font/robotoregular"
            android:onClick="onClick_Categories"
            android:text="@string/settings_categories_goods"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_stock"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/button_accounts"
            android:layout_alignBottom="@+id/button_accounts"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/button_accounts"
            android:layout_toRightOf="@+id/button_accounts"
            android:background="@drawable/main_menu_button_settings"
            android:fontFamily="@font/robotoregular"
            android:onClick="onClick_Stock"
            android:text="@string/settings_stock"
            android:textAllCaps="false" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/button_categories"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_rectangle"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scroll"
            android:layout_width="384dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/add_hall"
            android:layout_alignEnd="@+id/center"
            android:layout_alignRight="@+id/center"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignStart="@+id/view2"
            android:layout_below="@+id/textView"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp">

            <TableLayout
                android:id="@+id/BtList2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="0"
                android:visibility="visible"></TableLayout>
        </ScrollView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/scroll"
            android:layout_alignStart="@+id/scroll"
            android:layout_below="@+id/view2"
            android:layout_marginTop="12dp"
            android:backgroundTint="#fff"
            android:fontFamily="@font/robotoregular"
            android:text="@string/settings_halls"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="24sp"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/VP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_rectangle"
            android:layout_alignBottom="@+id/scroll"
            android:layout_alignEnd="@+id/settings_back"
            android:layout_alignLeft="@+id/center"
            android:layout_alignRight="@+id/settings_back"
            android:layout_alignStart="@+id/center"
            android:layout_alignTop="@+id/scroll"
            android:layout_marginLeft="20dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/etLogin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="75dp"
                android:background="@drawable/login_edit_text"
                android:ems="100"
                android:fontFamily="@font/robotoregular"
                android:hint="@string/login_login"
                android:text=""
                android:textSize="24sp"
                android:inputType="textPersonName"
                android:paddingBottom="1dp"
                android:paddingEnd="1dp"
                android:paddingLeft="20dp"
                android:paddingRight="1dp"
                android:paddingStart="20dp"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:layout_constraintHorizontal_bias="0.500"
                app:layout_constraintVertical_bias="0.500"

                 />
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/etPass"
                android:layout_alignLeft="@+id/etPass"
                android:layout_alignRight="@+id/etPass"
                android:layout_alignStart="@+id/etPass"
                android:layout_below="@+id/etPass"
                android:layout_marginTop="17dp"
                android:background="@drawable/login_edit_text"
                android:text=""
                android:textSize="24sp"
                android:hint="@string/login_name"
                android:paddingBottom="1dp"
                android:paddingEnd="1dp"
                android:ems="10"
                android:paddingLeft="20dp"
                android:paddingRight="1dp"
                android:paddingStart="20dp"
                android:textColor="#000"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etLogin"
                app:layout_constraintHorizontal_bias="0.500"
                app:layout_constraintVertical_bias="0.500"/>

            <EditText
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/etLogin"
                android:layout_alignLeft="@+id/etLogin"
                android:layout_alignRight="@+id/etLogin"
                android:layout_alignStart="@+id/etLogin"
                android:layout_below="@+id/etLogin"
                android:layout_marginTop="16dp"
                android:background="@drawable/login_edit_text"
                android:text=""
                android:textSize="24sp"
                android:hint="@string/login_pass"
                android:paddingBottom="1dp"
                android:paddingEnd="1dp"
                android:paddingLeft="20dp"
                android:paddingRight="1dp"
                android:paddingStart="20dp"
                android:textColor="#000"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etName"
                app:layout_constraintHorizontal_bias="0.500"
                app:layout_constraintVertical_bias="0.500"/>

            <EditText
                android:id="@+id/etLevel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/etName"
                android:layout_alignLeft="@+id/etName"
                android:layout_alignRight="@+id/etName"
                android:layout_alignStart="@+id/etName"
                android:layout_below="@+id/etName"
                android:layout_marginTop="18dp"
                android:background="@drawable/login_edit_text"
                android:text=""
                android:textSize="24sp"
                android:hint="@string/login_level"
                android:paddingBottom="1dp"
                android:paddingEnd="1dp"
                android:paddingLeft="20dp"
                android:paddingRight="1dp"
                android:paddingStart="20dp"
                android:textColor="#000"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPass"
                app:layout_constraintHorizontal_bias="0.500"
                app:layout_constraintVertical_bias="0.500"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/robotoregular"
                android:text="@string/settings_acc_value"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/etLogin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_save"
                style="@style/BtValueStyle"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/etLevel"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/etLevel"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:onClick="onClick_SaveAccuant"
                android:text="Сохранить"/>

            <Button
                android:id="@+id/btn_cancal"
                style="@style/BtCancelStyle"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/etLevel"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/etLevel"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:onClick="onClick_CancelAccuant"
                android:text="Отмена"/>
        </RelativeLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>